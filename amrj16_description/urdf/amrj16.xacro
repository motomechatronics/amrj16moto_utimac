<?xml version="1.0"?>

<robot  name="amrj16" xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:property name="robot_name" value="$(arg robot_name)"/>

 <link name="${robot_name}/base_link">
    </link>

    <!-- chassis-->
    <link name="${robot_name}/chassis">
    
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://amrj16_description/models/meshes/amrj16_chassis_utimac_v1.dae"/>
      </geometry>     
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://amrj16_description/models/meshes/amrj16_chassis_utimac_v1.dae"/>
      </geometry>
    </collision>

    <inertial>
        <mass value="34.2"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="10.164712" ixy="0.021460923" ixz="-0.0060724714" iyy="3.4403550" iyz="1.7125796" izz="12.572506"/>           
    </inertial>

  </link>

  <joint name="${robot_name}/base_link_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0" />
    <parent link="${robot_name}/base_link" />
    <child link="${robot_name}/chassis" />
  </joint>

   
    <!-- right wheel-->
    <link name="${robot_name}/right_wheel">            
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_driving_wheel.dae"/>
                </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.1030" length="0.030"/>
            </geometry>
        </collision>

        <inertial>
            <mass value="4.2"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia ixx="0.0093615284" ixy="0.0" ixz="0.000036838188" iyy="0.0093614132" iyz="0" izz="0.016609222"/>            
        </inertial>
    </link>

    <gazebo reference="${robot_name}/right_wheel">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>
        
    </gazebo>
    
    <joint name="${robot_name}/chassis_right_wheel_joint" type="continuous">
        <origin xyz="0 0.5456 0.103" rpy="1.5707 0 0"/>  <!-- -1.57-->
        <parent link="${robot_name}/chassis"/>
        <child link="${robot_name}/right_wheel"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- left wheel-->
    <link name="${robot_name}/left_wheel">            
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_driving_wheel.dae"/>
                </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                 <cylinder radius="0.1030" length="0.030"/>
            </geometry>
        </collision>   

         <inertial>
            <mass value="4.2"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia 
                ixx="0.0093615284" ixy="0.0" ixz="0.000036838188" iyy="0.0093614132" iyz="0" izz="0.016609222"/>            
        </inertial>
    
    </link>
    
    <gazebo reference="${robot_name}/left_wheel">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>       
    </gazebo>
    
    <joint name="${robot_name}/chassis_left_wheel_joint" type="continuous">
        <origin xyz="0 -0.5456 0.103" rpy="1.5707 0 0"/>
        <parent link="${robot_name}/chassis"/>
        <child link="${robot_name}/left_wheel"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- front-right caster hub -->
    <link name="${robot_name}/front_right_caster_hub">            
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_hub.dae"/>
                </geometry>
        </visual>

    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
                 <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_hub.dae"/>
        </geometry>
    </collision>   

    <inertial>
        <mass value="0.140"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia 
            ixx="0.00006" ixy="0.000000359" ixz="0.000014875" iyy="0.000059805" iyz="-0.00000077564" izz="0.000042536"/>            
    </inertial> 

    </link>
    
    <joint name="${robot_name}/chassis_front_right_caster_hub_joint" type="continuous">
        <origin xyz="0.255 0.186 0.053" rpy="0 0 1.5707"/>
        <parent link="${robot_name}/chassis"/>
        <child link="${robot_name}/front_right_caster_hub"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- front-right caster wheel -->
    <link name="${robot_name}/front_right_caster_wheel">            
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_wheel.dae"/>
                </geometry>
        </visual>

    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
                 <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_wheel.dae"/>
        </geometry>
    </collision>   

    <inertial>
        <mass value="0.189"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia 
            ixx="0.000025441" ixy="0" ixz="0" iyy="0.00002543" iyz="-0.0000000017817" izz="0.000028616"/>            
    </inertial> 

    </link>

    <gazebo reference="${robot_name}/front_right_caster_wheel">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>      
    </gazebo>

    <joint name="${robot_name}/front_right_caster_hub_wheel_joint" type="continuous">
        <origin xyz="0 0.015 -0.0325" rpy="0 1.5707 0"/>
        <parent link="${robot_name}/front_right_caster_hub"/>
        <child link="${robot_name}/front_right_caster_wheel"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

   
    <!-- front-left caster hub -->
    <link name="${robot_name}/front_left_caster_hub">            
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_hub.dae"/>
                </geometry>
        </visual>

        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_hub.dae"/>
            </geometry>
        </collision>   

        <inertial>
            <mass value="0.140"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia 
                ixx="0.00006" ixy="0.000000359" ixz="0.000014875" iyy="0.000059805" iyz="-0.00000077564" izz="0.000042536"/>            
        </inertial> 
    </link>
        
    <joint name="${robot_name}/chassis_front_left_caster_hub_joint" type="continuous">
        <origin xyz="0.255 -0.186 0.053" rpy="0 0 1.5707"/>
        <parent link="${robot_name}/chassis"/>
        <child link="${robot_name}/front_left_caster_hub"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <!-- front-left caster wheel -->
    <link name="${robot_name}/front_left_caster_wheel">            
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_wheel.dae"/>
                </geometry>
        </visual>
    
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                   <mesh filename="package://amrj16_description/models/meshes/amrj16_caster_wheel.dae"/>
            </geometry>
        </collision>   

        <inertial>
            <mass value="0.189"/>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <inertia 
                ixx="0.000025441" ixy="0" ixz="0" iyy="0.00002543" iyz="-0.0000000017817" izz="0.000028616"/>            
        </inertial> 

    </link>

    <gazebo reference="${robot_name}/front_left_caster_wheel">
        <kp>1000000000000000000000000000.0</kp>
        <kd>1000000000000000000000000000.0</kd>
        <mu1>10.0</mu1>
        <mu2>10.0</mu2>    
    </gazebo>

    <joint name="${robot_name}/front_left_caster_hub_wheel_joint" type="continuous">
        <origin xyz="0 0.015 -0.0325" rpy="0 1.5707 0"/>
        <parent link="${robot_name}/front_left_caster_hub"/>
        <child link="${robot_name}/front_left_caster_wheel"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" velocity="100.0" />
        <dynamics damping="0.0" friction="0.1"/>
    </joint>

    
    <!-- RGB cameras -->
    <link name="${robot_name}/rgb_camera_dx">
    </link>

    <joint name="rgb_camera_dx_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.280 0.186 0.068"/>
        <parent link="${robot_name}/chassis" />
        <child link="${robot_name}/rgb_camera_dx" />
        <axis xyz="0 0 0"/>
    </joint>

    <gazebo reference="${robot_name}/rgb_camera_dx"> 
        <sensor name="camera_dx" type="wideanglecamera">
          <camera>
            <horizontal_fov>6.283</horizontal_fov>
            <image>
              <width>320</width>
              <height>240</height>
            </image>
            <clip>
              <near>0.1</near>
              <far>100</far>
            </clip>
            <lens>
              <type>custom</type>
              <custom_function>
                <c1>1.05</c1>
                <c2>4</c2>
                <f>1.0</f>
                <fun>tan</fun>
              </custom_function>
              <scale_to_hfov>true</scale_to_hfov>
              <cutoff_angle>3.1415</cutoff_angle>
              <env_texture_size>512</env_texture_size>
            </lens>
            <always_on>1</always_on>
            <update_rate>30</update_rate>
          </camera>
          <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
            <namespace>/${robot_name}</namespace>
            <cameraName>rgb_camera</cameraName>
            <imageTopicName>image_raw</imageTopicName>
            <cameraInfoTopicName>camera_info</cameraInfoTopicName>
            <frameName>rgb_camera_dx</frameName>
            <hackBaseline>0.07</hackBaseline>
          </plugin>
        </sensor>
    </gazebo>

    <link name="${robot_name}/rgb_camera_sx">
    </link>

    <joint name="${robot_name}/rgb_camera_sx_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.280 -0.186 0.068"/>
        <parent link="${robot_name}/chassis" />
        <child link="${robot_name}/rgb_camera_sx" />
        <axis xyz="0 0 0"/>
    </joint>

    <gazebo reference="${robot_name}/rgb_camera_sx">
        <sensor name="camera_sx" type="wideanglecamera">
          <camera>
            <horizontal_fov>6.283</horizontal_fov>
            <image>
              <width>320</width>
              <height>240</height>
            </image>
            <clip>
              <near>0.1</near>
              <far>100</far>
            </clip>
            <lens>
              <type>custom</type>
              <custom_function>
                <c1>1.05</c1>
                <c2>4</c2>
                <f>1.0</f>
                <fun>tan</fun>
              </custom_function>
              <scale_to_hfov>true</scale_to_hfov>
              <cutoff_angle>3.1415</cutoff_angle>
              <env_texture_size>512</env_texture_size>
            </lens>
            <always_on>1</always_on>
            <update_rate>30</update_rate>
          </camera>
          <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
            <namespace>/${robot_name}</namespace>
            <cameraName>rgb_camera_sx</cameraName>
            <imageTopicName>image_raw</imageTopicName>
            <cameraInfoTopicName>camera_info</cameraInfoTopicName>
            <frameName>rgb_camera_sx</frameName>
            <hackBaseline>0.07</hackBaseline>
          </plugin>
        </sensor>
    </gazebo>

    <link name="${robot_name}/lidar">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                    <geometry>
                        <box size="0.02 0.02 0.02"/>
                    </geometry>
            </visual>

            <collision>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                        <box size="0.02 0.02 0.02"/>
                </geometry>
            </collision>   

            <inertial>
                <mass value="0.001"/>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <inertia 
                    ixx="0.000025441" ixy="0" ixz="0" iyy="0.00002543" iyz="-0.0000000017817" izz="0.000028616"/>            
            </inertial> 
    </link>

    <joint name="${robot_name}/chassis_lidar_joint" type="fixed">
        <origin rpy="3.14159265359 0 0" xyz="0.200 0 0.0265"/>
        <parent link="${robot_name}/chassis" />
        <child link="${robot_name}/lidar" />
        <axis xyz="0 1 0" /> <!-- 0 0 0-->
    </joint>

<gazebo reference="${robot_name}/lidar">
    <sensor name="sensor_ray" type="ray">
        <pose>0 0 0 0 0 0</pose> <!-- pose>0 0 0 3.14159265359 0 0</pose -->
        <ray>
          <scan>
            <horizontal>
              <samples>500</samples>
              <resolution>1</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.1</min>
            <max>30.0</max>
          </range>
        </ray>
        <always_on>true</always_on>
        <visualize>true</visualize>
        <update_rate>40.0</update_rate>
        <plugin name="laser" filename="libgazebo_ros_ray_sensor.so">
          <ros>
            <namespace>/${robot_name}</namespace>
            <remapping>~/out:=laserscan</remapping>
          </ros>
          <output_type>sensor_msgs/LaserScan</output_type>
          <frame_name>${robot_name}/lidar</frame_name> <!-- new line-->
        </plugin>
    </sensor>
</gazebo>

    <link name="${robot_name}/asus_xtion">
    </link>

    <joint name="${robot_name}/chassis_asus_xtion_joint" type="fixed">
        <origin rpy="0 0 0" xyz="0.300 0.0 0.2465"/>
        <parent link="${robot_name}/chassis" />
        <child link="${robot_name}/asus_xtion" />
        <axis xyz="0 0 0"/>
    </joint>

    <gazebo reference="${robot_name}/asus_xtion">
        <sensor type="ray" name="pointcloud_sensor">
            <ray>
            <scan>
                <horizontal>
                    <samples>50</samples>
                    <resolution>1.0</resolution>
                    <min_angle>-1.0</min_angle>
                    <max_angle>1.0</max_angle>
                </horizontal>
                <vertical>
                    <samples>50</samples>
                    <resolution>1.0</resolution>
                    <min_angle>-1.0</min_angle>
                    <max_angle>1.0</max_angle>
                </vertical>
            </scan>
            <range>
                <min>0.10</min>
                <max>5.0</max>
                <resolution>0.01</resolution>
            </range>
            <!-- Using gazebo's noise instead of plugin's -->
            <noise>
                <type>gaussian</type>
                <mean>0.0</mean>
                <stddev>0.01</stddev>
            </noise>
            </ray>
            <!-- Using gazebo's update rate instead of plugin's -->
            <update_rate>30</update_rate>
            <plugin name="gazebo_ros_block_laser_controller" filename="libgazebo_ros_ray_sensor.so">
            <!-- Change namespace and output topic so published topic is /rrbot/laser/pointcloud -->
            <ros>
                <namespace>/${robot_name}</namespace>
                <remapping>~/out:=pointcloud</remapping>
            </ros>
            <!-- Set output to sensor_msgs/PointCloud to get same output type as gazebo_ros_block_laser -->
            <output_type>sensor_msgs/PointCloud</output_type>
            <frame_name>${robot_name}/asus_xtion</frame_name>

            <!-- min_intensity instead of hokuyoMinIntensity -->
            <min_intensity>100.0</min_intensity>
            </plugin>
        </sensor>
    </gazebo>

    <!-- PLUGINS -->       
  <!-- JOINT PUBLISHER -->
  <gazebo>
    <plugin name="joint_state" filename="libgazebo_ros_joint_state_publisher.so">
      <ros>
          <namespace>/${robot_name}</namespace>
          <remapping>~/out:=joint_states</remapping>
      </ros>
      <update_rate>30</update_rate>

      <joint_name>${robot_name}/chassis_right_wheel_joint</joint_name>
      <joint_name>${robot_name}/chassis_left_wheel_joint</joint_name>

      <joint_name>${robot_name}/chassis_front_right_caster_hub_joint</joint_name>
      <joint_name>${robot_name}/front_right_caster_hub_wheel_joint</joint_name>

      <joint_name>${robot_name}/chassis_front_left_caster_hub_joint</joint_name>
      <joint_name>${robot_name}/front_left_caster_hub_wheel_joint</joint_name>

     
    </plugin>
  </gazebo>

  <!-- Differential drive -->
  <gazebo>
    <plugin filename="libgazebo_ros_diff_drive.so" name="differential_drive_controller">
       
        <ros>
             <remapping>/cmd_vel:=/${robot_name}/cmd_vel</remapping>
             <odometry_topic>odom</odometry_topic>
            <remapping>/odom:=${robot_name}/odom</remapping>
        </ros>

      <!-- wheels -->
      <left_joint>${robot_name}/chassis_left_wheel_joint</left_joint>
      <right_joint>${robot_name}/chassis_right_wheel_joint</right_joint>

      <!-- kinematics -->
      <wheel_separation>1.0912</wheel_separation>
      <wheel_diameter>0.206</wheel_diameter>

      <!-- limits -->
      <max_wheel_torque>20.0</max_wheel_torque>
      <max_wheel_acceleration>2.0</max_wheel_acceleration>

      <!-- command_topic>cmd_vel</command_topic>
      <remapping>/cmd_vel:=amrj16/cmd_vel</remapping -->

      <!-- output -->
      <publish_odom>true</publish_odom>
      <publish_odom_tf>true</publish_odom_tf>

      <odometry_frame>${robot_name}/odom</odometry_frame>
      <robot_base_frame>${robot_name}/base_link</robot_base_frame>

    </plugin>
  </gazebo>

    <!-- Position Config 
  <ros2_control name="GazeboSystem" type="system">
      <hardware>
        <plugin>gazebo_ros2_control/GazeboSystem</plugin>
      </hardware>

      <joint name="chassis_forks_joint">
        <command_interface name="position">
          <param name="min">0</param>
          <param name="max">0.035</param>
        </command_interface>
        <state_interface name="position"/>
        <state_interface name="velocity"/>
        <state_interface name="effort"/>
      </joint>

  </ros2_control>

-->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find amrj16_description)/config/amrj16_controller_position.yaml</parameters>
      <robot_param_node>${robot_name}/robot_state_publisher</robot_param_node>
    </plugin>
  </gazebo>

</robot>
